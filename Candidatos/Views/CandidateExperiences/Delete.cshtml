@model BD.CandidateExperiences

@{
    ViewData["Title"] = "Delete";
}


<div class="container">
    <h1>Eliminar Experiencia del Candidato</h1>
    <div class="row">
        <form class="col s12" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="input-field col s12">
                    <label class="control-label">Nombre Auditor</label>
                    <input asp-for="IdCandidateFK.Name" class="form-control" readonly />
                </div>
                <div class="input-field col s6">
                    <label asp-for="Company" class="control-label"></label>
                    <input asp-for="Company" class="form-control" readonly />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
                <div class="input-field col s6">
                    <label asp-for="Job" class="control-label"></label>
                    <input asp-for="Job" class="form-control" readonly />
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s6">
                    <label asp-for="BeginDate" class="control-label"></label>
                    <input asp-for="BeginDate" class="form-control" readonly />
                    <span asp-validation-for="BeginDate" class="text-danger"></span>
                </div>
                <div class="form-group col s6">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" readonly />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" readonly />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s12">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row" hidden>
                <div class="input-field col s12">
                    <label asp-for="InsertDate" class="control-label"></label>
                    <input asp-for="InsertDate" class="form-control" />
                    <span asp-validation-for="InsertDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row" hidden>
                <div class="input-field col s12">
                    <label asp-for="ModifyDate" class="control"></label>
                    <input asp-for="ModifyDate" class="form-control" />
                    <span asp-validation-for="ModifyDate" class="text-danger"></span>
                </div>
            </div>
            <form asp-route-id="@Model.IdCandidateExperience" method="post">
                <a asp-action="Index" class="btn red" asp-route-id="@Model.IdCandidate">
                    <i class="material-icons ">arrow_back</i>
                </a>
                <button type="submit" class="btn red">
                    <i class="material-icons">delete</i>
                </button>
            </form>
        </form>
    </div>
</div>