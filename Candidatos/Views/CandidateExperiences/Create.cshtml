@model BD.CandidateExperiences

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h1>Crear experencia del Candidato</h1>
    <div class="row">
        <form class="col s12" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="input-field col s6">
                    <label asp-for="Company" class="control-label"></label>
                    <input asp-for="Company" class="form-control" />
                    <span asp-validation-for="Company" class="text-danger"></span>
                </div>
                <div class="input-field col s6">
                    <label asp-for="Job" class="control-label"></label>
                    <input asp-for="Job" class="form-control" />
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s6">
                    <label asp-for="BeginDate" class="control-label"></label>
                    <input asp-for="BeginDate" class="form-control" />
                    <span asp-validation-for="BeginDate" class="text-danger"></span>
                </div>
                <div class="form-group col s6">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" value="0.00" class="form-control" maxlength="9" inputmode="numeric" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s12">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col s12">
                    <label class="control-label">Seleccionar Candidato</label>
                    <select asp-for="IdCandidate" class="form-control" asp-items="ViewBag.IdCandidate"></select>
                </div>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn red" asp-route-id="@Model?.IdCandidate">
                    <i class="material-icons ">arrow_back</i>
                </a>
                <input type="submit" value="Save" class="btn blue" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
